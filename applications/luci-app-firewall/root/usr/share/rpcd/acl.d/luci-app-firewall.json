{
	"luci-app-firewall": {
		"description": "Grant access to firewall configuration",
		"read": {
			"file": {
				"/etc/modules.d/mt7915e": ["read"],
				"/etc/firewall.user": [ "read" ]
			},
			"ubus": {
				"file": [ "read" ],
				"luci": [ "getConntrackHelpers" ]
			},
			"uci": [ "firewall" ]
		},
		"write": {
			"file": {
				"/etc/modules.d/mt7915e":  [ "write" ],
				"/etc/firewall.user": [ "write" ]
			},
			"ubus": {
				"file": [ "write" ]
			},
			"uci": [ "firewall" ]
		}
	}
}
